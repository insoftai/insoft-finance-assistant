# Node version
engine-strict=true
node-version=22.0.0

# Package manager settings
save-exact=true
package-lock=true

# Workspace settings
workspaces=true
shared-workspace-lockfile=true

# Performance
cache-min=3600
prefer-offline=true

# Security
audit=true
fund=false

# Registry
registry=https://registry.npmjs.org/

# Monorepo settings
strict-peer-dependencies=false
auto-install-peers=true
shamefully-hoist=true
resolution-mode=highest
